<p>
  <strong>Name:</strong>
  <%= @picture.name %>
</p>

<p>
  <strong>Blurb:</strong>
  <%= @picture.blurb %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @picture.image_url if @picture.image?%>
</p>
<%= form_with(model: comment, local: true) do |form| %>
  <div class='field'>
    <%= form.label :comment %>
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end%>
<%= link_to 'Edit', edit_picture_path(@picture) %> |
<%= link_to 'Back', pictures_path %>
